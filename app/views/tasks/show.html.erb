<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<p>Completed: <strong><%=@task.completed %></strong> </p>

<%= link_to 'edit this task', edit_task_path %>
<%= link_to 'back to tasks', tasks_path %>
<%= link_to 'DELETE', task_path(@task), method: :delete,
data: { confirm: "Are you sure?" } %>
